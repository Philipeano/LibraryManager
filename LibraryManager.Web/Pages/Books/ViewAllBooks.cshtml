@page "/books/view-all/{id:Guid?}"
@model LibraryManager.Web.Pages.Books.ViewAllBooksModel
@{
	ViewData["Title"] = "View All Books";
}

<h1>Available Books</h1>
<hr />

<p>Below is list of books currently in the libary.</p>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>No.</th>
			<th>Title</th>
			<th>Author</th>
			<th>Category</th>
			<th>Year Published</th>
		</tr>
	</thead>
	<tbody>
		@{
			var counter = 0;
			foreach (var book in Model.Books)
			{
				++counter;
				<tr>
					<td>@counter</td>
					<td>@book.Title</td>
					<td>@book.Author</td>
					<td>@book.Category</td>
					<td>@book.YearPublished</td>
					<td>
					    <a asp-page="/Books/ViewBook" asp-route-id="@book.Id" class="btn btn-success">View</a>
						<a asp-page="/Books/EditBook" asp-route-id="@book.Id" class="btn btn-primary">Edit</a>						
						<form method="post" style="display:inline">
							<button asp-page-handler="delete" asp-route-id="@book.Id" class="btn btn-danger" onclick="return confirm('Do you really want to delete this book?');">
								Delete
							</button>
						</form>
					</td>
				</tr>
			}
		}
	</tbody>
</table>