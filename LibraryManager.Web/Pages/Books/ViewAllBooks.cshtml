@page "/books/view-all"
@model LibraryManager.Web.Pages.Books.ViewAllBooksModel
@{
	ViewData["Title"] = "View All Books";
}

<h1>Available Books</h1>
<hr />

<p>Below is list of books currently in the libary.</p>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>No.</th>
			<th>Title</th>
			<th>Author</th>
			<th>Category</th>
			<th>Year Published</th>
		</tr>
	</thead>
	<tbody>
		@{
			var counter = 0;
			foreach (var book in Model.Books)
			{
				++counter;
				<tr>
					<td>@counter</td>
					<td>@book.Title</td>
					<td>@book.Author</td>
					<td>@book.Category</td>
					<td>@book.YearPublished</td>
				</tr>
			}
		}
	</tbody>
</table>